{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": false,
        "target": "es5",
        "lib": [
            "dom",
            "es2017"
        ],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}